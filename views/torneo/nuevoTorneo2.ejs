<%- include('../mods/template') %>
<div id="page-wrapper" ng-app = "torneo" ng-controller = "NuevoTorneoController">
<div id="page-inner">
    <div class="row">
        <div class="col-lg-12">
            <h2>Torneo</h2><h4>Nuevo Torneo (Paso 2) - Equipos</h4>   
        </div>
    </div>              
     <!-- /. ROW  -->
     <hr />
    <div class="row">
        <div class="col-xs-4">
            <h5>Grupos</h5>
            <div class="panel-group" id="accordion">
                <div class="panel panel-default" ng-repeat="grupo in torneo.grupos track by $index">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" ng-click="selectGrupo(grupo)" data-parent="#accordion" href="#collapse{{ grupo.nombre }}" class="">Grupo "{{ grupo.nombre }}"</a>
                        </h4>
                    </div>
                    <div id="collapse{{ grupo.nombre }}" class="panel-collapse collapse grupos" val="{{ grupo.nombre }}">
                        <div class="panel-body">
                            <fieldset class="form-group">
                                <div class="form-check" ng-repeat="equipo in grupo.equipos track by $index">
                                    <label class="form-check-label">{{ equipo.nombre }}
                                    </label>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>  
                                            
            </div>
        </div>
        <div class="col-xs-4"><br><br><br><br>
        </div>
        <div class="col-xs-4" >
            <h5>Equipos</h5>
            <fieldset class="form-group">
                <div class="form-check" ng-repeat="equipo in equipos track by $index">
                    <label class="form-check-label" >
                        <a ng-click="addEquipo(equipo)" class="btn btn-primary"><<</a>
                        {{ equipo.nombre }}
                    </label>
                </div>
            </fieldset>
        </div>
    </div>
    <a ng-click="registerTorneo(0)" class="btn btn-primary">Atras</a>
    <a ng-click="registerTorneo(2)" class="btn btn-primary">Siguiente</a>
</div>
<%- include('../mods/footer') %>
<script type="text/javascript" src="/torneo/torneo.js"></script>
<script type="text/javascript" src="/torneo/torneosController.js"></script>
