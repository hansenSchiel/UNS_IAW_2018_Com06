<%- include('../mods/template') %>
    <div id="page-wrapper" ng-app = "pronostico" ng-controller = "PronosticosController" >
        <div id="page-inner">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Torneos</h2>   
                </div>
            </div>              
             <!-- /. ROW  -->
             <hr />
            <div class="row" >
                <div class="col-lg-6 col-md-6" ng-repeat="pronostico in pronosticos">
                    <div class="tab-pane fade in">
                        {{ pronostico.torneo.nombre}} - Fecha {{ pronostico.fecha.nombre }}
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Local</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th>Visitante</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="resultado in pronostico.resultados  track by $index">
                                    <td>{{ $index+1 }}</td>
                                    <td>{{ resultado.encuentro.local.nombre }}
                                        
                                    </td>
                                    <th><span ng-show="resultado.ganador == 'L'">V</span></th>
                                    <td>vs</td>
                                    <th><span ng-show="resultado.ganador == 'V'">V</span></th>
                                    <td>{{ resultado.encuentro.visitante.nombre }}</td>
                                    <td>{{ resultado.encuentro.dia | date:'dd/MM/yyyy' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
         <!-- /. PAGE INNER  -->
    </div>
<%- include('../mods/footer') %>
<script type="text/javascript" src="/pronostico/pronostico.js"></script>
<script type="text/javascript" src="/pronostico/pronosticoController.js"></script>